{
    "workbench.colorTheme": "Almondz",
    "editor.fontFamily": "SauceCodePro Nerd Font Mono",
    "editor.fontSize": 14,
    "editor.wordWrap": "wordWrapColumn",
    "editor.cursorBlinking": "smooth",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "breadcrumbs.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.indentation": false,
    "editor.cursorSurroundingLines": 3,
    "editor.minimap.enabled": false,
    // Vim 
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.surround": true,
    "vim.sneak": false,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "g",
                "n"
            ],
            "after": [
                "g",
                "t"
            ]
        },
        {
            "before": [
                "g",
                "p"
            ],
            "after": [
                "g",
                "T"
            ]
        },
        {
            "before": [
                "g",
                "e"
            ],
            "after": [
                "G"
            ]
        },
        {
            "before": [
                "g",
                "b"
            ],
            "after": [
                "L"
            ]
        },
        {
            "before": [
                "g",
                "t"
            ],
            "after": [
                "H"
            ]
        },
        {
            "before": [
                "g",
                "c"
            ],
            "after": [
                "M"
            ]
        },
        {
            "before": [
                "g",
                "l"
            ],
            "after": [
                "$"
            ]
        },
        {
            "before": [
                "g",
                "h"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "commands": [
                "extension.advancedNewFile"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "lineBreakInsert"
            ],
            "silent": true
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        // EasyMotion Remap
        {
            "before": [
                "<leader>",
                "s"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "s"
            ]
        },
        {
            "before": [
                "<leader>",
                "f"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "f"
            ]
        },
        {
            "before": [
                "<leader>",
                "F"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "F"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "w"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "b"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        }
    ],
    "workbench.iconTheme": "material-icon-theme",
    "editor.selectionHighlight": false,
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "gopls": {
        "ui.semanticTokens": true
    },
    "editor.tokenColorCustomizations": {
        "[Almondz]": {
            "textMateRules": [
                {
                    "scope": "storage.type.built-in.primitive.c",
                    "settings": {
                        "foreground": "#ccd5ae"
                    }
                },
                {
                    "scope": "keyword.operator.assignment.c",
                    "settings": {
                        "foreground": "#D4BE98",
                    }
                },
                {
                    "scope": "keyword.operator.c",
                    "settings": {
                        "foreground": "#D4BE98",
                    }
                },
                {
                    "scope": "keyword.operator.decrement.c",
                    "settings": {
                        "foreground": "#D4BE98",
                    }
                },
                {
                    "scope": "keyword.operator.increment.c",
                    "settings": {
                        "foreground": "#D4BE98",
                    }
                },
                {
                    "scope": "keyword.operator.comparison.c",
                    "settings": {
                        "foreground": "#D4BE98",
                    }
                },
            ]
        }
    },
    "window.commandCenter": true,
    "dotnet.server.useOmnisharp": true
}
